@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">Acme is a leading technology training company.</p>
    <p><a href="@Url.Action("About")" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
  <div class="col-md-4">
    <h2>Departments</h2>
    <p>
      We offer training across a wide variety of technologies including Microsoft,
      Apple, Java, Oracle, JavaScript, and more.
    </p>
    <p><a class="btn btn-default" href="@Url.Action("Index", "Department")">Learn more &raquo;</a></p>
  </div>
  <div class="col-md-4">
    <h2>Courses</h2>
    <p>
      All of our courses include up-to-date technical information and hands-on lab
      exercises.
    </p>
    <p><a class="btn btn-default" href="@Url.Action("Index", "Course")">Learn more &raquo;</a></p>
  </div>
  <div class="col-md-4">
    <h2>Instructors</h2>
    <p>
      All of our instructors have real-world experience and extensive teaching
      experience.
    </p>
    <p><a class="btn btn-default" href="@Url.Action("Index", "Instructor")">Learn more &raquo;</a></p>
  </div>
</div>
<br />
<div class="row">
  <div class="col-md-12">
    @using (Ajax.BeginForm("Search", "Course", null, new AjaxOptions
    {
      HttpMethod = "GET",
      InsertionMode = InsertionMode.Replace,
      UpdateTargetId = "searchResults"
    },
      new { @class = "form-inline" })) {
      <input class="form-control" name="q" data-autocomplete="@Url.Action("QuickSearch", "Course")" />
      <button type="submit" class="btn btn-default">Search</button>
    }
  </div>
</div>
<br />
<div class="row">
  <div class="col-md-12" id="searchResults">
  </div>
</div>